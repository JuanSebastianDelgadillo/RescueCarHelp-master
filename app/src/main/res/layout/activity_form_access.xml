<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blanco">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/naranjo">
        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="220dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView3"
                    android:src="@mipmap/ic_help"
                    android:layout_marginTop="7dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rescue Car User"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/blanco"
                    android:textSize="20dp" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/img_internet"
                android:src="@drawable/int_si"
                android:layout_marginTop="15dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/naranjo">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registro nuevo usuario"
            android:id="@+id/textView12"
            android:textSize="20dp"
            android:textColor="@color/blanco"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Su nombre"
            android:id="@+id/textView7"
            android:textColor="@color/naranjo" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etNombre"
            android:layout_gravity="center_horizontal"
            android:textSize="17dp"
            android:textColor="@color/negro"
            android:textColorHint="@color/abc_input_method_navigation_guard"
            android:capitalize="words" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Su Apellido"
            android:id="@+id/textView9"
            android:textColor="@color/naranjo" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etApellido"
            android:layout_gravity="center_horizontal"
            android:textSize="17dp"
            android:textColor="@color/negro"
            android:capitalize="words" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Su rut"
            android:id="@+id/textView10"
            android:textColor="@color/naranjo" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <EditText
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:id="@+id/etRut"
                android:layout_gravity="center_horizontal"
                android:textSize="17dp"
                android:textColor="@color/negro"
                android:layout_weight="0.47"
                android:theme="@style/AlertDialog.AppCompat"
                android:capitalize="sentences"
                android:numeric="integer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/textView15"
                android:textSize="20dp"
                android:textColor="@color/negro" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etDiv"

                android:layout_weight="0.38"
                android:textColor="@color/negro"
                android:numeric="integer" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Su email"
            android:id="@+id/textView11"
            android:textColor="@color/naranjo" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etEmail"
            android:textSize="17dp"
            android:textColor="@color/negro" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Su número de teléfono"
            android:id="@+id/textView13"
            android:textColor="@color/naranjo" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:id="@+id/etCod"
                android:textSize="17dp"
                android:textColor="@color/negro"
                android:text="+56"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/textView14"
                android:textSize="20dp"
                android:textColor="@color/negro" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etTelefono"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:inputType="numberDecimal"
                android:textColor="@color/negro"
                android:textIsSelectable="false"
                android:numeric="integer"
                android:singleLine="true"
                android:phoneNumber="true" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center">

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="GUARDAR"
            android:id="@+id/btRegistrar"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="10dp"
            android:background="@color/naranjo"
            android:textColor="@color/blanco" />
    </LinearLayout>


</LinearLayout>

